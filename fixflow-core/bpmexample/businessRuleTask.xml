<?xml version="1.0" encoding="UTF-8"?>

<businessRuleTask id="businessRuleTask" name="业务规则任务"  fix:ruleNames="role1,role2" fix:resultVariableName="resultVariableName" xmlns:fix="c:/fix-bpmn-extens.xsd">
	<extensionElements>
		<fix:ruleScript>
			package com.sample;
			rule "rule1" no-loop
			when 
				$s:String (this=="fixed1")
			then
				System.out.println("rule1 fire!"+$s);
			end

			rule "rule2" no-loop
			when 
				$s:String()
			then
				System.out.println("rule2 fire!"+$s);
			end
		</fix:ruleScript>

		<fix:inputExpression fix:actuator="fixedValueActuator">fixed1</fix:inputExpression>
		<fix:inputExpression fix:actuator="simpleScriptActuator">"value"+"1"</fix:inputExpression>
		<fix:inputExpression fix:actuator="simpleScriptActuator">"value2"</fix:inputExpression>
	</extensionElements>
</businessRuleTask>